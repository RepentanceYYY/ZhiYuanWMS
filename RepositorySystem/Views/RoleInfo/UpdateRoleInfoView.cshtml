@{
    Layout= null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>layui</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="~/layuimini/lib/layui-v2.6.3/css/layui.css" media="all">
    <link rel="stylesheet" href="~/layuimini/css/public.css" media="all">
    <style>
        body {
            background-color: #ffffff;
        }
    </style>
</head>
<body>
<div class="layui-form layuimini-form" lay-filter="formTest">
    
    <div class="layui-form-item" style="display:none" >
        <label class="layui-form-label">Id</label>
        <div class="layui-input-block">
            <input type="text" name="id" value="" class="layui-input">
        </div>
    </div>    
    <div class="layui-form-item">
        <label class="layui-form-label required">角色名称</label>
        <div class="layui-input-block">
            <input type="text" name="roleName" lay-verify="required" lay-reqtext="账号不能为空" placeholder="请输入角色名称" value="" class="layui-input">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">描述</label>
        <div class="layui-input-block">
            <textarea name="description" class="layui-textarea"></textarea>            
        </div>
    </div> 

    <div class="layui-form-item">
        <div class="layui-input-block">
            <button class="layui-btn layui-btn-normal" lay-submit lay-filter="saveBtn">确认修改</button>
        </div>
    </div>
</div>
<script src="~/layuimini/lib/layui-v2.6.3/layui.js" charset="utf-8"></script>
<script>
    
    layui.use(['form','table'], function () {
        var form = layui.form,
            layer = layui.layer,
            table = layui.table,
            $ = layui.$;
            
            //获取url上的id
            var id =window.location.search.substr(4);
        $.ajax({
            url: '/RoleInfo/GetRoleInfoById',
            type: 'get',
            data: {
                id: id
            },
            success: function (res) {
                if(res.status==1)
                {
                    form.val("formTest", { //formTest 即 class="layui-form" 所在元素属性 lay-filter="" 对应的值
                         "id": res.datas.id
                        ,"roleName": res.datas.roleName // "name": "value"
                        , "description": res.datas.description
                    });
                }
                else
                {
                    layer.msg(res.msg);
                }
                
            }

        });

        //监听提交
        form.on('submit(saveBtn)', function (data) {


            //发起异步请求
            $.ajax({
                url:'/RoleInfo/UpdateRoleInfo',
                type:'post',
                data:data.field,
                success:function(res){

                    if(res.status==1){                        
                        parent.reloadTalbe();
                        var iframeIndex = parent.layer.getFrameIndex(window.name);
                        parent.layer.close(iframeIndex);
                        parent.layer.msg(res.msg);
                    }
                    else
                    {
                        layer.msg(res.msg);
                    }
                }
            });

            return false;
        });

    });
</script>
</body>
</html>