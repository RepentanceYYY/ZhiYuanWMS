@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>layui</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="../layuimini/lib/layui-v2.6.3/css/layui.css" media="all">
    <link rel="stylesheet" href="../layuimini/css/public.css" media="all">
</head>
<body>
<div class="layuimini-container">
    <div class="layuimini-main">

        <fieldset class="table-search-fieldset">
            <legend>搜索信息</legend>
            <div style="margin: 10px 10px 10px 10px">
                <form class="layui-form layui-form-pane" action="">
                    <div class="layui-form-item">
                        <div class="layui-inline">
                            <label class="layui-form-label">耗材名称</label>
                            <div class="layui-input-inline">
                                <input type="text" name="consumableName" autocomplete="off" class="layui-input">
                            </div>
                        </div>
                        <div class="layui-inline">
                            <button type="submit" class="layui-btn layui-btn-primary"  lay-submit lay-filter="data-search-btn"><i class="layui-icon"></i> 搜 索</button>
                        </div>
                    </div>
                </form>
            </div>
        </fieldset>

        <script type="text/html" id="toolbarDemo">
            <div class="layui-btn-container">
                <button class="layui-btn layui-btn-normal layui-btn-sm data-add-btn" lay-event="add"> 
                    <i class="layui-icon">&#xe654;</i>添加 </button>
                <button class="layui-btn layui-btn-sm layui-btn-danger data-delete-btn" lay-event="delete"> 
                    <i class="layui-icon">&#xe640;</i>删除 </button>
                <button type="button" class="layui-btn layui-btn-sm" id="importBtn">
                    <i class="layui-icon">&#xe67c;</i>导入数据
                </button>
                <button type="button" class="layui-btn layui-btn-sm" id="exportBtn">
                    <i class="layui-icon">&#xe601;</i>导出数据
                </button>
            </div>
        </script>

        <table class="layui-hide" id="currentTableId" lay-filter="currentTableFilter"></table>

        <script type="text/html" id="currentTableBar">
            <a class="layui-btn layui-btn-normal layui-btn-xs data-count-edit" lay-event="edit">编辑</a>
            <a class="layui-btn layui-btn-xs layui-btn-danger data-count-delete" lay-event="delete">删除</a>
        </script>

    </div>
</div>
<script src="../layuimini/lib/layui-v2.6.3/layui.js" charset="utf-8"></script>
<script>
    var tableIns;
    var upload;


    layui.use(['upload','form', 'table'], function () {
        var $ = layui.jquery,            
            table = layui.table,
            form = layui.form;            
            upload = layui.upload;

         tableIns = table.render({
            elem: '#currentTableId',
            url: '/ConsumableInfo/GetConsumableInfos',
            toolbar: '#toolbarDemo',
            defaultToolbar: ['filter', 'exports', 'print', {
                title: '提示',
                layEvent: 'LAYTABLE_TIPS',
                icon: 'layui-icon-tips'
            }],
            cols: [[
                {type: "checkbox", width: 50},
                {field: 'id', width: 80, title: 'ID',hide:true, sort: true},
                {field: 'consumableName', minwidth: 80, title: '耗材名称'},
                {field: 'specification', minwidth: 80, title: '耗材规格'},
                {field: 'num', minwidth: 80, title: '库存数量'},
                {field: 'unit', minwidth: 80, title: '单位'},
                {field: 'money', minwidth: 80, title: '价格'},
                {field: 'warningNum', minwidth: 80, title: '警告库存'},
                {field: 'categoryName', minwidth: 80, title: '耗材类型'},
                {field: 'description', minwidth: 80, title: '描述'},
                {field: 'createTime', minwidth: 80, title: '添加时间'},
                {title: '操作', minWidth: 150, toolbar: '#currentTableBar', align: "center"}
            ]],
            limits: [10, 15, 20, 25, 50, 100],
            limit: 10,
            page: true,
            skin: 'line'
        });
                //执行实例
            var uploadInst = upload.render({
              elem: '#importBtn' //绑定元素
              ,url: '/ConsumableInfo/Upload' //上传接口
              ,accept:'file'
              ,field:'formFild'
              ,done: function(res){
                //上传完毕回调
                  layer.msg(res.msg);
                  reloadTable();
              }
              ,error: function(){
                //请求异常回调
              }
            });

        // 监听搜索操作
        form.on('submit(data-search-btn)', function (data) {
            //var result = JSON.stringify(data.field);
            //layer.alert(result, {
            //    title: '最终的搜索信息'
            //});
            console.log(data.field.consumableName);//测试
            
            //执行搜索重载
            //tableIns.reload('currentTableId', {
            //    page: {
            //        curr: 1
            //    }
            //    , where: {
            //        aaa: ""
            //    }
            //});

            table.reload('currentTableId', {
                page: {
                    curr: 1
                }
                , where: {
                    consumableName: data.field.consumableName
                }
            });

            var uploadInst = upload.render({
              elem: '#importBtn' //绑定元素
              ,url: '/ConsumableInfo/Upload' //上传接口
              ,accept:'file'
              ,field:'formFild'
              ,done: function(res){
                //上传完毕回调
                  if (res.IsSuccess) {
                      layer.msg(res.msg);

                  }
                  else
                  {
                      layer.msg(res.msg);
                  }
              }
              ,error: function(){
                //请求异常回调
              }
            });

            return false;
        });

        /**
         * toolbar监听事件
         */
        table.on('toolbar(currentTableFilter)', function (obj) {
            if (obj.event === 'add') {  // 监听添加操作
                var index = layer.open({
                    title: '添加耗材信息',
                    type: 2,
                    shade: 0.2,
                    maxmin:true,
                    shadeClose: true,
                    area: ['100%', '100%'],
                    content: '/ConsumableInfo/CreateConsumableInfoView',
                    end:function(){
                        //关闭后取消window的resize事件
                        $(window).off("resize");
                    }
                });
                //$(window).on("resize", function () {
                //    layer.full(index);
                //});
            } else if (obj.event === 'delete') {  // 监听删除操作
                var checkStatus = table.checkStatus('currentTableId')
                    , data = checkStatus.data;

                var ids = [];
                for(var i=0;i<data.length;i++){
                    ids.push(data[i].id);
                }
                $.ajax({
                    url:'/ConsumableInfo/DeleteConsumableInfos',
                    type:'post',
                    data:{
                        ids:ids
                    },
                    success:function(res){

                        if(res.isSuccess)
                            {
                                reloadTable();
                                layer.msg(res.msg);
                            }                            
                            else
                            {
                                layer.msg(res.msg);
                            }
                    }
                });//异步尾端
            }
        });

        //监听表格复选框选择
        table.on('checkbox(currentTableFilter)', function (obj) {
            //console.log(obj)
        });

        table.on('tool(currentTableFilter)', function (obj) {
            var data = obj.data;
            if (obj.event === 'edit') {

                var index = layer.open({
                    title: '修改耗材信息',
                    type: 2,
                    shade: 0.2,
                    maxmin:true,
                    shadeClose: true,
                    area: ['100%', '100%'],
                    content: '/ConsumableInfo/UpdateConsumableInfoView?id=' + data.id,
                    end:function(){
                        $(window).off("resize");
                    }
                });
                //$(window).on("resize", function () {
                //    layer.full(index);
                //});
                return false;
            } else if (obj.event === 'delete') {
                layer.confirm('真的删除此耗材吗？', function (index) {
                    //obj.del();
                    //layer.close(index);

                    $.ajax({
                        url:'/ConsumableInfo/DeleteConsumableInfo',
                        type:'get',
                        data:{
                            id:data.id
                        },
                        success:function(res){

                            if(res.isSuccess)
                            {
                               
                                reloadTable();
                            }                            
                                layer.msg(res.msg);
                        }
                    });//异步尾端
                    layer.close(index);
                });
            }
        });
        $('#exportBtn').click(function () {
            window.location = "/ConsumableInfo/DownLoad";
        });
    });




    //定义全局变量用户刷新主页Index
    function reloadTable(){
        debugger;
        tableIns.reload('currentTableId', {
                page: {
                    curr: 1
                }
            });
        //执行实例
        var uploadInst = upload.render({
            elem: '#importBtn' //绑定元素
            ,url: '/ConsumableInfo/Upload' //上传接口
            ,accept:'file'
            ,field:'formFild'
            ,done: function(res){
            //上传完毕回调
            layer.msg(res.msg);
            }
            ,error: function(){
            //请求异常回调
            }
        });

    }
</script>

</body>
</html>